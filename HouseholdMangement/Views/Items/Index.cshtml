@model IEnumerable<HouseholdMangement.Models.Items>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
            <hr />
            <h2>@Html.DisplayFor(modelItem => item.CName)</h2>
            <p>@Html.DisplayFor(modelItem => item.Qty)</p>
            <p>@Html.DisplayFor(modelItem => item.Price)</p>
            <a asp-action="Edit"  class="btn btn-danger" asp-route-id="@item.Id">Edit</a> 


            <a asp-action = "Delete" class="btn btn-primary" asp-route-id = "@item.Id" > Delete </a>
}
    </div>

</div>